generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  firstName  String
  middleName String?
  lastName   String
  email      String   @unique
  password   String   @unique // hashed password
  imageUrl   String?
  createdAt  DateTime @default(now())
  Tokens     Tokens[]
}

model Tokens {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
